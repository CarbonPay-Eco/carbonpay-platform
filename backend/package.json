{
  "name": "carbonpay-backend",
  "version": "1.0.0",
  "description": "Backend for CarbonPay - a platform for carbon credit tokenization and retirement",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest",
    "db:migrate": "ts-node src/database/migration.ts",
    "db:sync": "ts-node -e \"import { AppDataSource } from './src/database/data-source'; AppDataSource.initialize().then(() => console.log('Database synchronized'))\""
  },
  "keywords": [
    "carbon",
    "credits",
    "blockchain",
    "solana",
    "tokenization"
  ],
  "author": "CarbonPay Team",
  "license": "MIT",
  "dependencies": {
    "@project-serum/anchor": "^0.26.0",
    "@solana/web3.js": "^1.73.0",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "8.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "tweetnacl": "^1.0.3",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "5.0.1",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.0",
    "@types/pg": "^8.11.13",
    "@types/uuid": "^9.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
